# PL8WRDS Environment Configuration Template
# Copy this file to .env and customize for your environment

# =================================
# APPLICATION SETTINGS
# =================================
ENVIRONMENT=development
APP_PORT=8000
LOG_LEVEL=DEBUG

# Application URLs
API_BASE_URL=http://localhost:8000

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Cache Settings
CACHE_TTL=3600
CACHE_PREFIX=pl8wrds:

# =================================
# DATABASE CONFIGURATION (Optional)
# =================================
DATABASE_URL=postgresql://pl8wrds:pl8wrds@localhost:5432/pl8wrds
POSTGRES_DB=pl8wrds
POSTGRES_USER=pl8wrds
POSTGRES_PASSWORD=pl8wrds
POSTGRES_PORT=5432

# =================================
# EXTERNAL SERVICES
# =================================
# OpenAI API (if using GPT models)
OPENAI_API_KEY=

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=cogito:14b

# =================================
# MACHINE LEARNING MODELS
# =================================
MODEL_PATH=models/word_scoring_ridge_v3.joblib
FEATURE_CACHE_PATH=cache/corpus_features.json
CORPUS_STATS_PATH=cache/corpus_stats.json
DICTIONARY_PATH=data/words_with_freqs.json

# Model Training Settings
TRAINING_DATA_PATH=data/training_dataset.json
FEATURE_EXTRACTION_BATCH_SIZE=1000

# =================================
# PERFORMANCE SETTINGS
# =================================
# Worker Configuration
WORKERS=4
WORKER_CONNECTIONS=1000
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Request Limits
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEP_ALIVE=2

# Memory Settings
MAX_MEMORY_USAGE=2G
CACHE_MAX_SIZE=500MB

# =================================
# SECURITY SETTINGS
# =================================
# API Keys and Secrets
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =================================
# MONITORING & LOGGING
# =================================
# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Log Settings
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =================================
# NGINX PROXY SETTINGS (Optional)
# =================================
NGINX_PORT=80
NGINX_SSL_PORT=443
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =================================
# DEVELOPMENT SETTINGS
# =================================
# Hot Reload
RELOAD=true
RELOAD_DIRS=app,tests

# Debug Mode
DEBUG=true
DEBUG_SQL=false

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://pl8wrds:pl8wrds@localhost:5432/pl8wrds_test

# =================================
# DOCKER SETTINGS
# =================================
# Build Arguments
PYTHON_VERSION=3.11
BUILD_DATE=
VCS_REF=
VERSION=latest

# Container Resource Limits
APP_MEMORY_LIMIT=2G
APP_CPU_LIMIT=2.0
REDIS_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=0.5

# =================================
# CI/CD SETTINGS
# =================================
# GitHub Container Registry
REGISTRY=ghcr.io
IMAGE_NAME=username/pl8wrds

# Deployment
DEPLOYMENT_ENVIRONMENT=development
CLUSTER_NAME=pl8wrds-cluster
NAMESPACE=pl8wrds

# =================================
# FEATURE FLAGS
# =================================
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECKS=true
ENABLE_CORS=true
ENABLE_GZIP=true

# Experimental Features
ENABLE_ASYNC_PROCESSING=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true