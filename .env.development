# Development Environment Configuration
# Optimized for local development with debugging enabled

# Application Settings
ENVIRONMENT=development
APP_PORT=8000
LOG_LEVEL=DEBUG
DEBUG=true
RELOAD=true

# API Settings
API_BASE_URL=http://localhost:8000
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
REDIS_PASSWORD=

# Cache Settings (shorter TTL for development)
CACHE_TTL=300
CACHE_PREFIX=pl8wrds:dev:

# Database (if needed for development)
DATABASE_URL=postgresql://pl8wrds:pl8wrds@localhost:5432/pl8wrds_dev
POSTGRES_DB=pl8wrds_dev
POSTGRES_USER=pl8wrds
POSTGRES_PASSWORD=pl8wrds

# External Services (use local/mock services)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=cogito:14b

# Model Paths (development data)
MODEL_PATH=models/word_scoring_ridge_v3.joblib
FEATURE_CACHE_PATH=cache/corpus_features.json
CORPUS_STATS_PATH=cache/corpus_stats.json
DICTIONARY_PATH=data/words_with_freqs.json

# Performance (lighter settings for development)
WORKERS=1
MAX_REQUESTS=100
TIMEOUT=60

# Security (relaxed for development)
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*
RATE_LIMIT_ENABLED=false

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# Logging
LOG_FORMAT=text
LOG_FILE_PATH=logs/dev.log

# Feature Flags (enable all for development)
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECKS=true
ENABLE_CORS=true
ENABLE_GZIP=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=false

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://pl8wrds:pl8wrds@localhost:5432/pl8wrds_test